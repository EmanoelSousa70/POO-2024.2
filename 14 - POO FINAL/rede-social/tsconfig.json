{
  "compilerOptions": {
    "target": "ES6",  // Garantir que o código será compilado para ES6
    "module": "commonjs",  // Usar CommonJS (para Node.js)
    "strict": true,  // Ativar verificações de tipo rigorosas
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"  // Incluir todos os arquivos TypeScript no diretório src
  ]
}
